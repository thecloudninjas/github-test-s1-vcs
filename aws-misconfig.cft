AWSTemplateFormatVersion: '2010-09-09'
Description: >
  INSECURE DEMO CloudFormation template.
  DO NOT USE IN PRODUCTION. Intended for CNAPP/CSPM and secret-scanning testing only.

Parameters:
  VpcId:
    Type: String
    Description: VPC ID to deploy resources into (e.g., vpc-1234567890abcdef0)
  SubnetId:
    Type: String
    Description: Public subnet ID for the EC2 instance (e.g., subnet-1234567890abcdef0)
  KeyName:
    Type: AWS::EC2::KeyPair::KeyName
    Description: Name of an existing EC2 KeyPair to SSH into the instance
  AvailabilityZone:
    Type: String
    Description: Availability Zone for the EBS volume (e.g., us-east-1a)

Resources:

  InsecureSecurityGroup:
    Type: AWS::EC2::SecurityGroup
    Properties:
      GroupDescription: Overly permissive security group - DEMO ONLY
      VpcId: !Ref VpcId
      SecurityGroupIngress:
        # SSH open to the world
        - IpProtocol: tcp
          FromPort: 22
          ToPort: 22
          CidrIp: 0.0.0.0/0
        # RDP open to the world
        - IpProtocol: tcp
          FromPort: 3389
          ToPort: 3389
          CidrIp: 0.0.0.0/0
      SecurityGroupEgress:
        # All outbound allowed
        - IpProtocol: -1
          FromPort: 0
          ToPort: 0
          CidrIp: 0.0.0.0/0
      Tags:
        - Key: Name
          Value: insecure-sg

  InsecureBucket:
    Type: AWS::S3::Bucket
    Properties:
      # Bucket encryption not configured (no BucketEncryption block)
      # Versioning not configured (no VersioningConfiguration)
      BucketName: !Sub insecure-demo-public-bucket-${AWS::AccountId}-${AWS::Region}
      Tags:
        - Key: Name
          Value: insecure-public-bucket

  InsecureBucketPublicAccessBlock:
    Type: AWS::S3::BucketPublicAccessBlock
    Properties:
      Bucket: !Ref InsecureBucket
      BlockPublicAcls: false
      BlockPublicPolicy: false
      IgnorePublicAcls: false
      RestrictPublicBuckets: false

  InsecureBucketPolicy:
    Type: AWS::S3::BucketPolicy
    Properties:
      Bucket: !Ref InsecureBucket
      PolicyDocument:
        Version: '2012-10-17'
        Statement:
          - Sid: AllowPublicRead
            Effect: Allow
            Principal: "*"
            Action:
              - s3:GetObject
            Resource: !Sub '${InsecureBucket.Arn}/*'

  UnencryptedVolume:
    Type: AWS::EC2::Volume
    Properties:
      AvailabilityZone: !Ref AvailabilityZone
      Size: 10
      # Explicitly turning off encryption
      Encrypted: false
      Tags:
        - Key: Name
          Value: insecure-unencrypted-volume

